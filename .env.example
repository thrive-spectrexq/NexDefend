# .env.example

# This file contains the environment variables needed to run the application.
# Copy this file to .env and fill in the values.

# PostgreSQL Database
DB_USER=nexdefend
DB_PASSWORD=your_secure_password
DB_NAME=nexdefend_db
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=disable

# API Configuration
API_PREFIX=/api/v1
PYTHON_API=http://localhost:5000

# JWT Secret Key
JWT_SECRET_KEY=your_jwt_secret_key

# AI Service Token (REQUIRED - Must be strong and secret)
AI_SERVICE_TOKEN=your_strong_secret_token

# Core API URL (REQUIRED)
CORE_API_URL=http://localhost:8080/api/v1

# Grafana Admin Credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_grafana_password
